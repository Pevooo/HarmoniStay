@page
@using Microsoft.AspNetCore.Http
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    ViewBag.UserId = HttpContext.Session.GetString("UserId");
    //Layout = null;
}
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<script>
    toastr.options = {
        "closeButton": true,
        "positionClass": "toast-top-right",
        "progressBar": true,
        "timeOut": "5000",
        "extendedTimeOut": "2000"
    }
</script>
<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"> </script>

@if (TempData["Error"] != null)
{
    <script type="text/javascript">
        toastr.error(@TempData["Error"]);


    </script>
}
@if (TempData["Success"] != null)
{
    <script type="text/javascript">
        toastr.success(@TempData["Success"]);


    </script>
}
<body>
    <!-- Page Preloder -->

    <!-- Offcanvas Menu Section End -->
    
    <!-- Header End -->
    <!-- Hero Section Begin -->
    <section class="hero-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="hero-text">
                        <h1>HarmoniStay For Hotel Management</h1>
                        <p>
                            Here is the best hotel management site, including management for staff, event, facilities and room reservations.
                        </p>
                        @if (ViewBag.UserId is null)
                        {
                            <a class="primary-btn" asp-area="" asp-page="/Login">Discover Now</a>
                        }
                    </div>
                </div>
                <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
                    
                </div>
            </div>
        </div>
        <div class="hero-slider owl-carousel">
            <div class="hs-item set-bg" data-setbg="img/hero/hero-1.jpg"></div>
            <div class="hs-item set-bg" data-setbg="img/hero/hero-2.jpg"></div>
            <div class="hs-item set-bg" data-setbg="img/hero/hero-3.jpg"></div>
        </div>
    </section>
    <!-- Hero Section End -->
    <!-- About Us Section Begin -->
    <section class="aboutus-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="about-text">
                        <div class="section-title">
                            <span>About Us</span>
                            <h2>HarmoniStay <br />Management Hotel</h2>
                        </div>
                        <p class="f-para">
                            HarmoniStay.com is a leading online management site. We’re passionate about
                            management.
                        </p>
                        <p class="s-para">
                            So when it comes to management, it is the perfect web app, vacation rental, resort,
                            apartment, guest house, or tree house, we’ve got you covered.
                        </p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="about-pic">
                        <div class="row">
                            <div class="col-sm-6">
                                <img src="img/about/about-1.jpg" alt="">
                            </div>
                            <div class="col-sm-6">
                                <img src="img/about/about-2.jpg" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- About Us Section End -->
    <!-- Services Section End -->
    <section class="services-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <span>What We Do</span>
                        <h2>Discover Our Services</h2>
                    </div>
                </div>
            </div>
            <div class="row">
