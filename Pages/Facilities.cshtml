@page
@model MainProject.Pages.FacilitiesModel
@{
    ViewData["Title"] = "Facilities";
}



<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 p-0" style="background-image: url(img/hero/hero-1.jpg);">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center pb-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Facilitys</h1>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Facilities Start -->
@if (Model.Error)
{
    <p>Please check your input.</p>
}

<form method="post" class="container-fluid booking pb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <div class="bg-white shadow" style="padding: 35px;">
            <div class="row g-2">
                <div class="col-md-10">
                    <div class="row g-2">
                        <div class="col-md-3">
                            <div class="date" id="date1" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input" name="FacilityName"
                                       placeholder="Facility Name" data-target="#date1" data-toggle="datetimepicker" required />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="date" id="date2" data-target-input="nearest">
                                <input type="time" class="form-control datetimepicker-input" name="startDate"
                                       placeholder="Start Date" data-target="#date2" data-toggle="datetimepicker" required />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="date" id="date2" data-target-input="nearest">
                                <input type="time" class="form-control datetimepicker-input" name="endDate"
                                       placeholder="End Date" data-target="#date2" data-toggle="datetimepicker" required />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="date" id="date1" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input" name="PictureURL"
                                       placeholder="PictureURL" data-target="#date1" data-toggle="datetimepicker" required />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="date" id="date1" data-target-input="nearest">
                        <input type="submit" style="background-color:#d4af7a;" value="Add Facility" class="btn btn-primary w-100" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="article" id="Article">
    <div class="maintitle">Article</div>
    <div class="container">

        @for(int i = 0; i < Model.Facilitiesnames.Count(); i++)
        {
            <div class="box">
                <a href="RemoveFacilities/@Model.IDSfacilities[i]" class="btn "> <i class="bi  bg-black bi-x-circle-fill"></i></a>
                <a href="EditFacilities/@Model.IDSfacilities[i]" class="btn "><i class="bi bg-black bi-pencil-square"></i></a>
                <div class="content">
                    <h3>@Model.Facilitiesnames[i]</h3>
                    <img src=@Model.Facilitiesphotos[i]>
                </div>
                <div class="info">
                    
                    <p>@Model.timeoffacilities[i]</p>
                    <p>@Model.timeoffacilities[i+1]</p>
                    <button type="button" class="btn btn-info">Info</button>
                  
                </div>
            </div>
        }
       
       

    </div>

</div>
     
<!-- Facilities End--> 