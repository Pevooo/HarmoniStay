@page
@model MainProject.Pages.AddEmployeeModel

@{
    ViewData["Title"] = "AddStaff";
    ViewBag.UserId = HttpContext.Session.GetString("UserId");
}


<div class="container-fluid page-header mb-5 p-0" style="background-image: url(@Url.Content("~/img/hero/hero-1.jpg"));">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center pb-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Staff</h1>
        </div>
    </div>
</div>
@if (Model.Error)
{
    <p>Check Your Inputs</p>
}
<form method="post" class="container-fluid booking pb-5 wow fadeIn cont" data-wow-delay="0.1s" enctype="multipart/form-data">
        <div class="container">
            <div class="bg-white shadow" style="padding: 35px;">
                <div class="row g-2">
                <div class="col-md-3">
                    <div class="date" id="date2" data-target-input="nearest">
                        <input type="text" name="EmployeeID" placeholder="EmployeeID" required />
                    </div>
                    <div class="date" id="date2" data-target-input="nearest">
                        <input type="text" name="EmployeeName" placeholder="EmployeeName" required  />
                    </div>
                    <div class="date" id="date2" data-target-input="nearest">
                        <input type="number" name="WorkingHours" placeholder="WorkingHours" required/>
                    </div>
                    <div class="date" id="date2" data-target-input="nearest">
                        <input type="number" name="EmployeeSalary" placeholder="EmployeeSalary" required />
                    </div>
                    <div class="date" id="date2" data-target-input="nearest">
                        <input type="file" id="file" name="image" placeholder="Employeeimage" required  />
                    </div>
                    <div class="date" id="date1" data-target-input="nearest">
                        <select id="Facility" name="Facility">
                            @foreach (var fac in Model.CategoryFacilities)
                            {
                                <option value="@fac">@fac</option>
                            }


                        </select>
                    </div>
                </div>
                   <div class="col-md-2">
                        <div class="date" id="date1" data-target-input="nearest">
                        <input type="submit" style="background-color:#d4af7a; border-color:#d4af7a; color:white;" value="Add" class="btn btn-primary w-100" />
                        </div>
                  </div>
                </div>
            </div>
        </div>
    </form>
