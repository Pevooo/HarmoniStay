@page
@model MainProject.Pages.AddEmployeeModel

@{
    ViewData["Title"] = "AddStaff";
    ViewBag.UserId = HttpContext.Session.GetString("UserId");
}


<!-- Page Header Start -->
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="hero-text">
                    <h1>HarmoniStay For Hotel Management</h1>
                    <p>
                        Here is the best hotel management site, including management for staff, event, facilities and room reservations.
                    </p>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
            </div>
        </div>
    </div>
    <div class="hero-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg=@Url.Content("~/img/hero/hero-1.jpg")></div>
        <div class="hs-item set-bg" data-setbg=@Url.Content("~/img/hero/hero-2.jpg")></div>
        <div class="hs-item set-bg" data-setbg=@Url.Content("~/img/hero/hero-3.jpg")></div>
    </div>
</section>

<div class="container-fluid page-header mb-5 p-0">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center pb-5">
            <h1 class="display-3 mb-3 animated slideInDown" style="color:#d4af7a;">Add Employee</h1>
        </div>
    </div>
</div>
    <!-- Page Header End -->
@if (Model.Error)
{
    <p>Check Your Inputs</p>
}
<form method="post" class="container-fluid booking pb-5 wow fadeIn cont" data-wow-delay="0.1s" enctype="multipart/form-data">
        <div class="container">
            <div class="bg-white shadow" style="padding: 35px;">
                <div class="row g-2">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="primary-btn" style="color:black ">  Employee ID</label>
                        </div>
                        <div class="col-md-4">
                            <div class="date" id="date1" data-target-input="nearest">
                                <input type="text" class="form-control" name="EmployeeID" placeholder="EmployeeID" required />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label class="primary-btn" style="color:black ">  Employee Name</label>
                        </div>
                        <div class="col-md-4">
                            <div class="date" id="date1" data-target-input="nearest">
                                <input type="text" class="form-control" name="EmployeeName" placeholder="EmployeeName" required />
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-2">
                            <label class="primary-btn" style="color:black ">  Working Hours</label>
                        </div>
                        <div class="col-md-4">
                            <div class="date" id="date1" data-target-input="nearest">
                                <input type="number" class="form-control" name="WorkingHours" placeholder="WorkingHours" required />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label class="primary-btn" style="color:black ">  Employee Salary</label>
                        </div>
                        <div class="col-md-4">
                            <div class="date" id="date1" data-target-input="nearest">
                                <input type="number" class="form-control" name="EmployeeSalary" placeholder="EmployeeSalary" required />
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-2">
                            <label class="primary-btn" style="color:black ">  Employee Image</label>
                        </div>
                        <div class="col-md-4">
                            <div class="date" id="date1" data-target-input="nearest">
                                <input type="file" class="form-control" id="file" name="image" placeholder="Employeeimage" style="background-color:white;"required />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label class="primary-btn" style="color:black ">  Facility Category</label>
                        </div>
                        <div class="col-md-4">
                            <div class="date" id="date1" data-target-input="nearest">
                                <select class="form-control" id="Facility" name="Facility" style="background-color:white;">
                                    @foreach (var fac in Model.CategoryFacilities)
                                    {
                                        <option value="@fac">@fac</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <br>
                </div>
                    <div class="col-md-2">
                        <div class="date" id="date1" data-target-input="nearest">
                            <input type="submit" style="background-color:#d4af7a; border-color:#d4af7a; color:white;" value="Add" class="btn btn-primary w-100" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
