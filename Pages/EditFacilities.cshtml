@page "{id}"
@model MainProject.Pages.EditFacilitiesModel
@if (Model.Error)
{
    <p>Please check your input.</p>
}

<form method="post" class="container-fluid booking pb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <div class="bg-white shadow" style="padding: 35px;">
            <div class="row g-2">
                <div class="col-md-10">
                    <div class="row g-2">
                        <div class="col-md-3">
                            <div class="date" id="date1" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input" name="FacilityName"
                                       placeholder="Facility Name" data-target="#date1" value="@Model.FacilityName" data-toggle="datetimepicker" required />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="date" id="date2" data-target-input="nearest">
                                <input type="time" class="form-control datetimepicker-input" name="startDate"
                                       placeholder="Start Date" data-target="#date2" value="@Model.st" data-toggle="datetimepicker" required />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="date" id="date2" data-target-input="nearest">
                                <input type="time" class="form-control datetimepicker-input" name="endDate"
                                       placeholder="End Date" data-target="#date2" value="@Model.end" data-toggle="datetimepicker" required />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="date" id="date1" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input" name="PictureURL"
                                       placeholder="PictureURL" data-target="#date1" value="@Model.URL" data-toggle="datetimepicker" required />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="date" id="date1" data-target-input="nearest">
                        <input type="submit" value="Save" class="btn btn-primary w-100" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>