@page "{id}"
@model MainProject.Pages.EditFacilitiesModel

@{
    ViewData["Title"] = "EditFacilities";
    ViewBag.UserId = HttpContext.Session.GetString("UserId");
}

@if (Model.Error)
{
    <p>Please check your input.</p>
}

<!-- Page Header Start -->
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="hero-text">
                    <h1>HarmoniStay For Hotel Management</h1>
                    <p>
                        Here is the best hotel management site, including management for staff, event, facilities and room reservations.
                    </p>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
            </div>
        </div>
    </div>
    <div class="hero-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg=@Url.Content("~/img/hero/hero-1.jpg")></div>
        <div class="hs-item set-bg" data-setbg=@Url.Content("~/img/hero/hero-2.jpg")></div>
        <div class="hs-item set-bg" data-setbg=@Url.Content("~/img/hero/hero-3.jpg")></div>
    </div>
</section>

<div class="container-fluid page-header mb-5 p-0">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center pb-5">
            <h1 class="display-3 mb-3 animated slideInDown" style="color:#d4af7a;">Edit Facility</h1>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Page Header End -->
<form method="post" class="container-fluid booking pb-5 wow fadeIn" data-wow-delay="0.1s" enctype="multipart/form-data">
    <div class="container">
        <div class="bg-white shadow" style="padding: 35px;">
            <div class="row g-2">
                <div class="col-md-10">
                    <div class="row g-2">
                        <div class="col-md-3">
                            <div class="date" id="date1" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input" name="FacilityName"
                                       placeholder="Facility Name" data-target="#date1" value="@Model.FacilityName" data-toggle="datetimepicker" required />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="date" id="date2" data-target-input="nearest">
                                <input type="time" class="form-control datetimepicker-input" name="startDate"
                                       placeholder="Start Date" data-target="#date2" value="@Model.Start" data-toggle="datetimepicker" required />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="date" id="date2" data-target-input="nearest">
                                <input type="time" class="form-control datetimepicker-input" name="endDate"
                                       placeholder="End Date" data-target="#date2" value="@Model.End" data-toggle="datetimepicker" required />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="date" id="date2" data-target-input="nearest">
                                <input type="file" id="file" name="image" placeholder="Employeeimage" required />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="date" id="date1" data-target-input="nearest">
                        <!--<input type="submit" class="btn btn-primary w-100" />-->
                        <input type="submit" style="background-color:#d4af7a; border-color:#d4af7a; color: white;" value="Save" class="btn btn-primary w-100" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
</div>