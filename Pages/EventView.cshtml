@page "{id}"

@model MainProject.Pages.EventViewModel
@{
    ViewData["Title"] = "EventView";
    ViewBag.UserId = HttpContext.Session.GetString("UserId");
    //Layout = null;

}

<h2>@Model.EventType</h2>
<table class="table table-striped table-dark">
    <thead>

        <tr>
            <th scope="col">Event Name </th>
            <th scope="col">Event Start</th>
            <th scope="col">Event End</th>
           
        </tr>
    </thead>
    <tbody>

        @foreach (var x in Model.q){
        <tr>
            <th scope="col">@x.EventName </th>
            <th scope="col">@x.EventStart</th>
            <th scope="col">@x.EventEnd</th>
            </tr>
        }
        @foreach (var x in Model.q)
        {
            <tr>
                <th scope="col">@x.EventName </th>
                <th scope="col">@x.EventStart</th>
                <th scope="col">@x.EventEnd</th>
                <div class="box">
                    <a href="EventEdit/@x.EventID" class="btn " style="display:grid">Edit<i class="bi  bg-black bi-x-circle-fill"></i></a>
                    <a href="RemoveEvent/@x.EventID" class="btn " style="display:grid"> Remove<i class="bi  bg-black bi-x-circle-fill"></i></a>
                </div>
            </tr>
        }
